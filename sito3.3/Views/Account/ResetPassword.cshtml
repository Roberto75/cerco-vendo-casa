@model MyWebApplication.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/MasterPageMobile.cshtml";
}

<h1>Generazione di una nuova password</h1>
<p>Se ti dimenticato la password non c'è problema, inserisci la tua login ed email e clicca su invia.</p>
<p>Il sistema provvede ad inviarti un messaggio, alla casella email inserita al momento della registrazione, con una nuova password.</p>

@Html.ValidationSummary(true, "Attenzione")

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style="max-width: 500px;">
        <div>
            <label for="Login">Login:</label>
            <input type="text" name="Login" id="Login"  data-clear-btn="true" data-mini="false" required  value="@Model.Login" >
        </div>

        <div >
            <label for="Email">Email:</label>
            <input type="text" name="Email" id="Email"  data-clear-btn="true" data-mini="false" required  value="@Model.Email" >
        </div>

        <div data-role="controlgrup" data-type="horizontal" data-mini="true">
            <input type="submit" data-inline="true" value="Reset password" />
        </div>
    </div>
}